<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/common/patreon/game_perk/patreons_game_perk.css" />
	</styles>
 	<scripts>
		<include src="file://{resources}/layout/custom_game/common/utils.js" />
		<include src="file://{resources}/layout/custom_game/common/patreon/game_perk/patreons_game_perk.js" />
	</scripts>

 	<Panel hittest="false" class="PatreonGamePerkRoot">
		<Image id="PatreonGamePerkButtonOption" src="file://{resources}/layout/custom_game/common/patreon/game_perk/background_patreons_game_perk.png"/>

 		<Panel id="PatreonGamePerkButtonPanel">
			<Image id="SetPatreonGamePerkButton"
				   src="file://{resources}/layout/custom_game/common/patreon/game_perk/patreon_button_setting_no_glow.png"
				   onactivate="ShowPatreonsGamePerks()"
				   onmouseover="ShowPatreonsGamePerksHint()"
				   onmouseout="HidePatreonsGamePerksHint()"
			/>

			<Panel style="visibility: collapse;">
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/patreon_button_setting_glow.png"/>

				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_mp_regen_1.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_mp_regen_3.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_hp_regen_1.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_hp_regen_3.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_bonus_movespeed_10.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_bonus_movespeed_15.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_bonus_agi_10.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_bonus_str_10.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_bonus_int_10.png"/>
				<Image src="file://{resources}/layout/custom_game/common/patreon/game_perk/icons/patreon_perk_bonus_all_stats_7.png"/>

			</Panel>
		</Panel>

		<Panel id="PatreonsGamePerkMenu">
			<Panel class="PatreonsGamePerkMenuHeadGrid">
				<Label class="PatreonsGamePerkMenuHeadText" text="#patreons_perk_hide_choose"/>
			</Panel>
			<Panel id="PatreonsGamePerksTierList"/>
		</Panel>

		<Button id="ClosePatreonsPerks" onactivate="HidePatreonsGamePerks()" onmouseover="DOTAShowTextTooltip(#close_patreons_game_perks_menu)" onmouseout="DOTAHideTextTooltip()"/>
	</Panel>
</root>
